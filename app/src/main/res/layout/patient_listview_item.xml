<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="1"
        android:layout_weight="0.18">

        <TextView
            android:layout_width="250dp"
            android:layout_height="86dp"
            android:text="New Text"
            android:id="@+id/list_item_text_view"
            android:textSize="25sp"
            android:layout_weight="0.50" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="ZleÄ‡ badanie"
                    android:id="@+id/list_item_SetInvestigationButton"
                    android:layout_weight="0.16"
                    android:nestedScrollingEnabled="false"
                    android:onClick="setInvestigationOnClickButton" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="Leki"
                    android:id="@+id/list_item_SetMedicamentButton"
                    android:layout_weight="0.16"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="Karta obserwacyjna"
                    android:id="@+id/list_item_ShowPatientCardButton"
                    android:layout_weight="0.16"
                    android:nestedScrollingEnabled="false"
                    android:onClick="setInvestigationOnClickButton" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="Wypisz"
                    android:id="@+id/list_item_DischargeButton"
                    android:layout_weight="0.16"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>